<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="POST">
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input class="form-control" type="text" name="postTitle" required autocomplete="off">
    </div>
    <div>
        <label class="form-label">Post</label>
        <textarea class="form-control" name="postBody" cols="40" rows="5" required autocomplete="off"></textarea>
    </div>
    <br>
    <button class="btn btn-primary" type="submit" name="publishPost">Publish</button>
</form>

<%- include("partials/footer") -%>